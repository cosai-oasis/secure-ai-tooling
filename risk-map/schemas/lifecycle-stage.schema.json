{
  "$id": "lifecycle-stage.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Lifecycle Stage Schema",
  "description": "Schema for AI system lifecycle stage definitions",
  "type": "object",
  "properties": {
    "lifecycleStages": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "required": ["id", "title", "description"],
        "properties": {
          "id": {
            "type": "string",
            "description": "Unique lifecycle stage identifier",
            "enum": [
              "planning",
              "data-preparation",
              "model-training",
              "development",
              "evaluation",
              "deployment",
              "runtime",
              "maintenance"
            ]
          },
          "title": {
            "type": "string",
            "description": "Display name for the lifecycle stage"
          },
          "description": {
            "type": "string",
            "description": "Detailed description of the lifecycle stage"
          },
          "order": {
            "type": "integer",
            "description": "Sequential order in the lifecycle (1-8)"
          }
        }
      }
    }
  },
  "required": ["lifecycleStages"]
}
