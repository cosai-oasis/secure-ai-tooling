{
  "$id": "actor-access.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Actor Access Schema",
  "description": "Schema for threat actor access level definitions",
  "type": "object",
  "properties": {
    "actorAccessLevels": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "required": ["id", "title", "description"],
        "properties": {
          "id": {
            "type": "string",
            "description": "Unique actor access level identifier",
            "enum": [
              "none",
              "api",
              "user",
              "privileged",
              "agent",
              "supply-chain",
              "infrastructure-provider",
              "service-provider",
              "physical"
            ]
          },
          "title": {
            "type": "string",
            "description": "Display name for the access level"
          },
          "description": {
            "type": "string",
            "description": "Detailed description of the access level and typical threat actors"
          },
          "category": {
            "type": "string",
            "enum": ["traditional", "modern"],
            "description": "Whether this is a traditional or modern/AI-specific access level"
          }
        }
      }
    }
  },
  "required": ["actorAccessLevels"]
}
